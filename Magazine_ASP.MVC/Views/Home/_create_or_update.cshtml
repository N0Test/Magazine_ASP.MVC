<div class="form-group">
    <label asp-for="Date" class="control-label"></label>
    <input asp-for="Date" class="form-control" />
    <span asp-validation-for="Date" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="Tag" class="control-label"></label>
    <select asp-for="Tag" class="form-control" asp-items="Html.GetEnumSelectList<NewsTag>()"></select>
    <span asp-validation-for="Tag" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ViewsCount" class="control-label"></label>
    <input asp-for="ViewsCount" class="form-control" />
    <span asp-validation-for="ViewsCount" class="text-danger"></span>
</div>
<div class="form-group">
    <label asp-for="ImageId" class="control-label"></label>
    <select asp-for="ImageId" class="form-control">
        <option>select image...</option>
        @foreach (var image in imageList)
        {
            <option value="@image.Id">@image.Name</option>
        }
    </select>
    <span asp-validation-for="ImageId" class="text-danger"></span>
</div>

