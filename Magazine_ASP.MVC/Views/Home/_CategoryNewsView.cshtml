@model CategoryNewsViewModel
@{
    int countBlocksInRow = 2;
}

@for (int i = 0; i < @Model.CategoryNews.Count; i += countBlocksInRow)
{
    <div class=cat-news>
        <div class=container>
            <div class=row>
                @for (int j = 0; j < countBlocksInRow; j++)
                {
                    <div class="col-md-6">
                        <h2>@Model.CategoryNews.ToList()[i+j].Key.ToString()</h2>
                        <div class="row cn-slider">
                            @foreach (var news in @Model.CategoryNews.ToList()[i + j].Value)
                            {
                                @Html.Partial("_CategoryNewsViewItem", news)
                            }
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>

}